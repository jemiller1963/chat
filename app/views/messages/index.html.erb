<h1>Messages</h1>

<div data-controller='message-list'>
  <div data-target='message-list.messages'>
    <%= render @messages %>
  </div>
  <%= form_with(model: Message.new,
                data: { action: 'ajax:success->message-list#clearInput'}) do |form| %>



                                            <%= form.text_area :content, data: {target: 'message-list.input'},class:'shadow appearance-none border rounded w-full py-2 px-3 -ml-1 mt-1 text-gray-700 leading-tight focus:outline-none focus:shadow-outline', autofocus: true %>
                                            <%= form.submit class: 'btn btn-default' %>
                                          <% end %>
</div>
